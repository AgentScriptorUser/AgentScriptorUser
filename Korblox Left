local ply = game.Players.LocalPlayer
local chr = ply.Character or ply.CharacterAdded:Wait()

-- Wait for character parts to load
if not chr:FindFirstChild("LeftLowerLeg") then chr:WaitForChild("LeftLowerLeg") end
if not chr:FindFirstChild("LeftUpperLeg") then chr:WaitForChild("LeftUpperLeg") end
if not chr:FindFirstChild("LeftFoot") then chr:WaitForChild("LeftFoot") end

-- Apply Korblox leg look
chr.LeftLowerLeg.MeshId = "902942093"
chr.LeftLowerLeg.Transparency = 1
chr.LeftUpperLeg.MeshId = "http://www.roblox.com/asset/?id=902942096"
chr.LeftUpperLeg.TextureID = "http://roblox.com/asset/?id=902843398"
chr.LeftFoot.MeshId = "902942089"
chr.LeftFoot.Transparency = 1
